<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/allotment_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AllotmentSchedule">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background" />


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerPadding="25dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444">

        <!-- Header Row -->
        <TableRow
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/writer"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Writer"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Date"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Time"
                android:textStyle="bold" />

            <!-- New Column Header -->
            <TextView
                android:id="@+id/student"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Student"
                android:textStyle="bold" />
        </TableRow>

        <!-- Data Rows -->
        <TableRow
            android:layout_height="wrap_content"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/w1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Writer 1" />

            <TextView
                android:id="@+id/date1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="01/01/2024" />

            <TextView
                android:id="@+id/time1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="10:00 AM" />

            <!-- New Column Data -->
            <TextView
                android:id="@+id/s1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Blind 1" />
        </TableRow>

        <!-- Repeat for more rows -->

        <TableRow
            android:layout_height="wrap_content"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/w2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Writer 2" />

            <TextView
                android:id="@+id/date2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="02/01/2024" />

            <TextView
                android:id="@+id/time2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12:00 PM" />

            <!-- New Column Data -->
            <TextView
                android:id="@+id/s2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Blind 2" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/w3"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Writer 3" />

            <TextView
                android:id="@+id/date3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="02/01/2024" />

            <TextView
                android:id="@+id/time3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12:00 PM" />

            <!-- New Column Data -->
            <TextView
                android:id="@+id/s3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Blind 3" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/w4"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Writer 4" />

            <TextView
                android:id="@+id/date4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="02/01/2024" />

            <TextView
                android:id="@+id/time4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12:00 PM" />

            <!-- New Column Data -->
            <TextView
                android:id="@+id/s4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Blind 4" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/w5"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Writer 5" />

            <TextView
                android:id="@+id/date5"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="02/01/2024" />

            <TextView
                android:id="@+id/time5"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12:00 PM" />

            <!-- New Column Data -->
            <TextView
                android:id="@+id/location5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Blind 5" />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/w6"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Writer 6" />

            <TextView
                android:id="@+id/date6"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="02/01/2024" />

            <TextView
                android:id="@+id/time6"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12:00 PM" />

            <!-- New Column Data -->
            <TextView
                android:id="@+id/s6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Blind 6" />
        </TableRow>

        <!-- Continue adding more rows with new column data -->

    </TableLayout>

    <ImageView
            android:id="@+id/imageView6"
            android:layout_width="42dp"
            android:layout_height="46dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.972"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.007"
            app:srcCompat="@drawable/languages" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivHome"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="47dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintVertical_bias="0.983"
            app:srcCompat="@drawable/homebutton" />

        <ImageView
            android:id="@+id/ivSetting"
            android:layout_width="39dp"
            android:layout_height="39dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.921"
            app:layout_constraintStart_toEndOf="@+id/ivHome"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/settings" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allotment Schedule"
        android:textColor="#5B5A5C"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294" />

</androidx.constraintlayout.widget.ConstraintLayout>


